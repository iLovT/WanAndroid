<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_weight="5">

        <TextView
            android:id="@+id/adapter_project_list_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_12"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/app_color"
            android:textSize="@dimen/sp_14"
            tools:text="玩Android Flutter 版本" />

        <TextView
            android:id="@+id/adapter_project_list_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adapter_project_list_tv_title"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="@color/text_vice_color"
            android:textSize="12sp"
            tools:text="这是一个Flutter项目，基于Wan Android提供的api来完成的" />

        <ImageView
            android:id="@+id/adapter_project_list_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:background="@drawable/time" />

            <TextView
                android:id="@+id/adapter_project_list_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="111"
                android:textColor="@color/text_vice_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/adapter_project_list_tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="111"
                android:textColor="@color/text_vice_color"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/adapter_project_list_iv"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:maxHeight="180dp"
        android:minHeight="100dp"
        android:src="@mipmap/ic_launcher" />
</LinearLayout>